{
  "kind": "collectionType",
  "collectionName": "actions",
  "info": {
    "name": "action",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "shared-blocks.contact",
        "shared-blocks.heading",
        "shared-blocks.media",
        "shared-blocks.material",
        "shared-blocks.accordion",
        "shared-blocks.richtext",
        "shared-blocks.unterbrecher"
      ],
      "required": true
    },
    "start": {
      "type": "datetime",
      "required": true
    },
    "where": {
      "type": "string",
      "required": true
    },
    "city": {
      "model": "city",
      "via": "action"
    },
    "group": {
      "via": "action",
      "model": "group"
    },
    "end": {
      "type": "datetime",
      "required": true
    },
    "intro": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "facebook_link": {
      "type": "string"
    }
  }
